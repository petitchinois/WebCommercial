


@model  WebCommercial.Models.Metier.Clientel

@{
    ViewBag.Title = "Modifier";
    Layout = "~/Views/Shared/_LayoutCommercial.cshtml";
}

<h2>Modifier un client</h2>

@if (Model != null)
{

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Client</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.NoClient, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NoClient, new { htmlAttributes = new { @class = "form-control",  @disabled = ""  } })
                    @Html.ValidationMessageFor(model => model.NoClient, "", new { @class = "text-danger" })
                    <input name="NoClient" type="HIDDEN" value=@(@Model.NoClient) id="NoClient"/> 

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Société</label>
                <div class="col-md-10">
                    <input name="Societe" type="text" class="form-control" value=@(@Model.Societe) id="Societe" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">NomClient</label>
                <div class="col-md-10">
                    <input name="NomCl" type="text" class="form-control" value=@(@Model.NomCl) id="NomCl" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">PrénomClient</label>
                <div class="col-md-10">
                    <input name="PrenomCl" type="text" class="form-control" value=@(@Model.PrenomCl) id="PrenomCl" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Adresse client</label>
                <div class="col-md-10">
                    <input name="AdresseCl" type="text" class="form-control" value=@(@Model.AdresseCl) id="AdresseCl" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Code Postal client</label>
                <div class="col-md-10">
                    <input name="CodePostCl" type="text" class="form-control" value=@(@Model.CodePostCl) id="CodePostCl" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Ville client</label>
                <div class="col-md-10">
                    <input name="VilleCl" type="text" class="form-control" value=@(@Model.VilleCl) id="VilleCl" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Enregistrer" class="btn btn-primary" />
                    
                </div>
            </div>
        </div>

    }
}


