                @Html.ValidationMessageFor(model => model.QteCdee, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Livree, htmlAttributes: new { @class = "control-label col-md-2" })
