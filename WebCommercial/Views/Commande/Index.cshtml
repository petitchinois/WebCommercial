
@model IEnumerable<WebCommercial.Models.Metier.Commandes>


@{
    ViewBag.Title = "Liste des commandes";
    Layout = "~/Views/Shared/_LayoutCommercial.cshtml";
}
@if (Model != null)
{
    <div class="container">
        <div class="col-md-8 col-sm-8">
            <div class="blanc">
                <h1>Liste des commandes </h1>
            </div>

            <div class="container">
                <div class="row">
                    <div class='col-sm-6'>
                        <div class="form-group">
                            <div class='input-group date' id='datetimepicker1'>
                                <input type='text' class="form-control" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <script type="text/javascript">
                        $(function () {
                            $('#datetimepicker1').datetimepicker();
                        });
                    </script>
                </div>
            </div>

            <div class="container">
                <div class="row">
                    <div class='col-sm-6'>
                        <div class="form-group">
                            <div class='input-group date' id='datetimepicker2'>
                                <input type='text' class="form-control" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <script type="text/javascript">
                        $(function () {
                            $('#datetimepicker2').datetimepicker();
                        });
                    </script>
                </div>
            </div>

            <table class="table table-bordered table-striped table-responsive">
                <thead>
                    <tr>
                        <th> N° commande</th>
                        <th> N° vendeur</th>
                        <th> N° client </th>
                        <th> Date commande </th>
                        <th> Facture </th>

                        <th style="width:80px">Modifier</th>
                        <th style="width:80px">Supprimer</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NoCommande)</td>
                <td>@Html.DisplayFor(modelItem => item.NoVendeur)</td>
                <td> @Html.DisplayFor(modelItem => item.NoClient) </td>

                <td>@Html.DisplayFor(modelItem => item.DateCde)</td>
                <td> @Html.DisplayFor(modelItem => item.Facture) </td>

                <td style="text-align:center;">
                    <span>
                        @Html.ActionLink("  ", "Modifier", "Commande", new { id = item.NoCommande }, new { @class = "btn btn-default btn-primary glyphicon glyphicon glyphicon-pencil" })
                    </span>
                </td>
                <td style="text-align:center;">
                    <span>
                        @Html.ActionLink("  ", "Supprimer", "Commande", new { id = item.NoCommande }, new { @class = "btn btn-default btn-primary glyphicon glyphicon glyphicon-remove" })
                    </span>
                </td>
            </tr>
}

            </table>
            <div class="form-group">
                <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
                    @Html.ActionLink("Ajouter des commandes", "Ajout", "Commande", new { @class = "btn btn-default btn-primary" })
                </div>
            </div>

        </div>
    </div>
}
